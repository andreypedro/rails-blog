<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong><%= pluralize post.comments.count, "comment" %></strong>

  <p>
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

</div>
